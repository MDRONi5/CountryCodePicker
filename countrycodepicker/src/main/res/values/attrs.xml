<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CountryCodePicker">

        <attr name="layout_width" format="dimension" />
        <attr name="layout_height" format="dimension" />
        <attr name="paddingLeft" format="dimension" />
        <attr name="paddingRight" format="dimension" />
        <attr name="paddingTop" format="dimension" />
        <attr name="paddingBottom" format="dimension" />
        <attr name="padding" format="dimension" />

        <attr name="stateListAnimator" format="reference" />
        <attr name="strokeSize" format="dimension" />


        <attr name="showFlag" format="boolean" />
        <attr name="showText" format="boolean" />
        <attr name="showIcon" format="boolean" />


        <attr name="textSize" format="dimension" />
        <attr name="fontColor" format="reference|color" />

        <attr name="textStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
        </attr>

        <attr name="typeOfCode" format="enum">
            <enum name="name" value="2" />
            <enum name="number" value="3" />
        </attr>

        <attr name="defaultCountyNameCode" format="string" />


    </declare-styleable>

</resources>